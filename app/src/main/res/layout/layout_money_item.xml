<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"

              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <ImageView
        android:id="@+id/iv_gamelogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:scaleType="centerCrop"
        android:padding="5dp"
        android:src="@mipmap/ic_about_app"/>
<LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="70dp"
    android:padding="5dp"
    android:orientation="vertical">
    <TextView
        android:id="@+id/tv_gametitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游戏任务"/>
    <RatingBar
        android:id="@+id/rb_score"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="?android:attr/ratingBarStyleSmall"
        android:stepSize="0.5"
        android:rating="5"
        android:max="10"
        android:progressDrawable="@drawable/layer_ratingbar"
        android:numStars="5"/>
    <TextView
        android:id="@+id/tv_gamecontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="官方任务，奖励丰厚"/>
</LinearLayout>
    <RelativeLayout
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_gameaward"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="奖888元"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:textColor="@color/sel_money_award_color"
            android:background="@drawable/sel_money_award"/>
    </RelativeLayout>

</LinearLayout>