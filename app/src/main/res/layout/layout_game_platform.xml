<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/gametask_header"
              xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:descendantFocusability="beforeDescendants"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <ImageView
        android:id="@+id/iv_gamelogo"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:padding="5dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/ic_about_app"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:orientation="vertical"
        android:padding="5dp">

        <TextView
            android:id="@+id/tv_gametitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="游戏任务"/>

        <RatingBar
            android:id="@+id/rb_score"
            style="?android:attr/ratingBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:max="10"
            android:numStars="5"
            android:progressDrawable="@drawable/layer_ratingbar"
            android:rating="5"
            android:stepSize="0.5"/>

        <TextView
            android:id="@+id/tv_gamecontent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="官方任务，奖励丰厚"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btn_gameaward"
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:background="@drawable/sel_money_award"
            android:text="奖888元"
            android:focusable="false"
            android:textColor="@color/sel_money_award_color"/>
    </RelativeLayout>

</LinearLayout>