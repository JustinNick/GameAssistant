<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="15dp"
    tools:context="com.example.johncheng.gameassistant.module.main.ui.UserRegisterActivity">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <ImageButton
        android:id="@+id/reg_goback"
        android:layout_width="40dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:background="@drawable/sel_back_reg"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="用户注册"
        android:textColor="#000000"
        android:textSize="30sp"
        android:layout_marginRight="10dp"
        android:gravity="center"/>
</LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="15dp"
        android:background="#44000000"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_phone"
        android:padding="10dp"
        android:background="@drawable/sel_edittext"
        android:hint="请输入手机号"
        android:inputType="phone"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_code"
            android:padding="10dp"
            android:background="@drawable/sel_edittext"
            android:hint="请输入验证码"
            android:layout_gravity="center_horizontal"/>
        <TextView
            android:id="@+id/tv_getcode"
            android:clickable="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:text="获取验证码"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:gravity="center"
            android:textColor="#ffffff"
            android:background="@drawable/sel_reg_get"
            />
    </RelativeLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_name"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/sel_edittext"
        android:hint="请输入昵称"
        android:layout_gravity="center_horizontal"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/et_password"
        android:hint="请输入密码"
        android:layout_marginTop="20dp"
        android:padding="10dp"
        android:background="@drawable/sel_edittext"
        android:inputType="textPassword"
        android:layout_gravity="center_horizontal"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_height="wrap_content">
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/et_request_code"
            android:padding="10dp"
            android:background="@drawable/sel_edittext"
            android:hint="请输入邀请码(非必填项)"
            android:layout_gravity="center_horizontal"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="10dp"
            android:textColor="#ffffff"
            android:background="@drawable/sel_reg_get"
            android:layout_alignParentRight="true"
            android:text="扫描自动填写"/>
    </RelativeLayout>

<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="我已阅读并接受"
        android:id="@+id/cb_read_request"/>
    <TextView
        android:id="@+id/tv_reg"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/agreetext"
        android:textColor="#cc0000ff"/>
</LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:text="注册"
        android:textColor="#ffffff"
        android:layout_marginTop="20dp"
        android:background="@drawable/sel_btn_register"
        android:id="@+id/button"/>
</LinearLayout>
